function generarPoemaTostador() {
    const linea1 = versos[Math.floor(Math.random() * versos.length)];
    const linea2 = versos[Math.floor(Math.random() * versos.length)];
    const linea3 = versos[Math.floor(Math.random() * versos.length)];
    return `${linea1}\n${linea2}\n${linea3}\n`;
}

